generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Address {
  id         String @id @default(cuid(2))
  street     String
  postalCode String
  city       String
  state      String
  country    String

  companies Company[]
  unit      Unit[]
}

enum CompanyType {
  HYDROGEN_PRODUCER
  POWER_PRODUCER
  HYDROGEN_RECIPIENT
}

model Company {
  id          String @id @default(cuid(2))
  name        String
  mastrNumber String

  companyType CompanyType

  address   Address @relation(fields: [addressId], references: [id])
  addressId String

  hydrogenApprovals PowerAccessApproval[] @relation(name: "HydrogenProducer")
  powerApprovals    PowerAccessApproval[] @relation(name: "PowerProducer")

  users   User[]
  units   Unit[]
  batches Batch[]
}

model User {
  id    String @id @default(cuid(2))
  name  String
  email String @unique

  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?

  processStep ProcessStep[]
}

model Unit {
  id                       String   @id @default(cuid(2))
  name                     String
  mastrNumber              String
  manufacturer             String
  modelType                String
  modelNumber              String
  serialNumber             String
  commissionedOn           DateTime
  decommissioningPlannedOn DateTime

  address   Address @relation(fields: [addressId], references: [id])
  addressId String

  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?

  powerProductionUnit    PowerProductionUnit?
  hydrogenProductionUnit HydrogenProductionUnit?
  hydrogenStorageUnit    HydrogenStorageUnit?

  documents   Document[]
  processStep ProcessStep[]
}

model PowerProductionUnitType {
  name String @id

  powerProductionUnits PowerProductionUnit[]
}

model PowerProductionUnit {
  id                   String  @id
  ratedPower           Decimal
  gridOperator         String
  gridLevel            String
  gridConnectionNumber String

  type     PowerProductionUnitType @relation(fields: [typeName], references: [name])
  typeName String

  generalInfo Unit @relation(fields: [id], references: [id])
}

model ElectrolysisType {
  name String @id

  hydrogenProductionUnits HydrogenProductionUnit[]
}

model HydrogenProductionUnit {
  id         String  @id
  ratedPower Decimal

  type     ElectrolysisType @relation(fields: [typeName], references: [name])
  typeName String

  generalInfo Unit @relation(fields: [id], references: [id])

  hydrogenStorageUnit   HydrogenStorageUnit @relation(fields: [hydrogenStorageUnitId], references: [id])
  hydrogenStorageUnitId String              @unique
}

model HydrogenStorageUnit {
  id       String  @id
  capacity Decimal
  filling  Batch[]

  generalInfo Unit @relation(fields: [id], references: [id])

  hydrogenProductionUnits HydrogenProductionUnit[]
}

model Document {
  id          String @id @default(cuid(2))
  description String
  location    String

  unit   Unit?   @relation(fields: [unitId], references: [id])
  unitId String?

  processStep   ProcessStep? @relation(fields: [processStepId], references: [id])
  processStepId String?

  powerAccessApproval PowerAccessApproval[]
}

model EnergySource {
  name String @id

  powerAccessApproval PowerAccessApproval[]
}

enum PowerAccessApprovalStatus {
  APPROVED
  PENDING
  REJECTED
}

model PowerAccessApproval {
  id                        String                    @id @default(cuid(2))
  decidedAt                 DateTime
  powerAccessApprovalStatus PowerAccessApprovalStatus

  energySource     EnergySource @relation(fields: [energySourceName], references: [name])
  energySourceName String

  powerProducer   Company @relation(fields: [powerProducerId], references: [id], name: "PowerProducer")
  powerProducerId String

  hydrogenProducer   Company @relation(fields: [hydrogenProducerId], references: [id], name: "HydrogenProducer")
  hydrogenProducerId String

  documentId String
  document   Document @relation(fields: [documentId], references: [id])
}

enum BatchType {
  HYDROGEN
  POWER
}

model Batch {
  id      String    @id @default(cuid(2))
  active  Boolean
  amount  Decimal
  quality String
  type    BatchType

  predecessors Batch[] @relation("BatchRelation")
  successors   Batch[] @relation("BatchRelation")

  owner   Company @relation(fields: [ownerId], references: [id])
  ownerId String

  hydrogenStorageUnit   HydrogenStorageUnit? @relation(fields: [hydrogenStorageUnitId], references: [id])
  hydrogenStorageUnitId String?

  processStep ProcessStep?
}

model ProcessType {
  name String @id

  processStep ProcessStep[]
}

model ProcessStep {
  id        String   @id @default(cuid(2))
  startedAt DateTime
  endedAt   DateTime

  processType     ProcessType @relation(fields: [processTypeName], references: [name])
  processTypeName String

  batch   Batch  @relation(fields: [batchId], references: [id])
  batchId String @unique

  recordedBy User   @relation(fields: [userId], references: [id])
  userId     String

  executedBy Unit   @relation(fields: [unitId], references: [id])
  unitId     String

  documents Document[]
}

enum HydrogenColor {
  GREEN
  ORANGE
  PINK
  YELLOW
}
